<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clComments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tvTitleComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name"
            android:textSize="13dp"
            android:textColor="@color/colorLightGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvBodyComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strBodyComment"
            android:textSize="13dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorLightMediumGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleComment"/>

        <View
            style="@style/Divider"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/tvBodyComment"
            app:layout_constraintStart_toStartOf="@id/tvBodyComment"
            app:layout_constraintTop_toBottomOf="@id/tvBodyComment"
            />

</androidx.constraintlayout.widget.ConstraintLayout>